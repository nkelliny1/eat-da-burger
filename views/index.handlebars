<h1>Burgers</h1>

<div class="row">
  <div class="column">
    <ul>
      {{#each burgers}}
        {{#unless devour}}
          {{> burgers/burger-block devour=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="column">
    <ul>
      {{#each burgers}}
        {{#if devour}}
          {{> burgers/burger-block devour=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add Burger</button>
</form>
